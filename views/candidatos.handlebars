<main class="lista-candidatos">
    <h2>Lista de Candidatos</h2>
    {{#if candidatos.length}}
        {{#each candidatos as | candidato |}}
            <div class="candidato">
                <div class="caja">
                    <p class="etiqueta">Nombre:</p>
                    <p class="nombre">{{candidato.nombre}}</p>
                </div>
                <div class="caja">
                    <p class="etiqueta">E-mail:</p>
                    <p class="nombre">{{candidato.email}}</p>
                </div>
                <div class="caja">
                    <a href="/uploads/cv/{{candidato.cv}}" target="_blank" class="btn btn-verde">Ver CV</a>
                </div>
            </div>
        {{/each}}
    {{else}}
        <p>No hay candidatos</p>
    {{/if}}
</main>