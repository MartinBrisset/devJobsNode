<main class="contedor">
    <form action="/editar-perfil" method="POST" class="default-form">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" placeholder="Tu nombre" required value="{{usuario.nombre}}">
        </div>
        <div class="campo">
            <label>Email</label>
            <input type="email" name="email" placeholder="Tu email" required value="{{usuario.email}}">
        </div>
        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Tu password">
        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar cambios">
        </div>
    </form>
</main>