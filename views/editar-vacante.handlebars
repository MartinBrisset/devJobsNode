<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form">
        <h3>Informacion general</h3>

        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" placeholder="Ej: React developer" required value="{{vacante.titulo}}">
        </div>
        
        <div class="campo">
            <label>Empresa</label>
            <input type="text" name="empresa" placeholder="Vortex Sistemas" required value="{{vacante.empresa}}">
        </div>
        
        <div class="campo">
            <label>Ubicacion</label>
            <input type="text" name="ubicacion" placeholder="Montevideo" required value="{{vacante.ubicacion}}">
        </div>
        
        <div class="campo">
            <label>Salario</label>
            <input type="text" name="salario" placeholder="500 USD" required value="{{vacante.salario}}">
        </div>
        <div class="campo">
            <label>Contrato</label>
            <select name="contrato">
                {{#tipoContrato vacante.contrato}}
                    <option value="" disabled selected>Selecciona un tipo de contrato</option>
                    <option value="Freelance">Freelance</option>
                    <option value="Tiempo Completo">Tiempo Completo</option>
                    <option value="Medio Tiempo">Medio Tiempo</option>
                    <option value="Por Proyecto">Por Proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>
        <h3>Descripcion del puesto</h3>
        <div class="campo descripcion">
            <label>Descripcion</label>
            {{!-- Se crea un input tipo hidden para que se oculte, de aca sacas el texto en html que se ontrodujo en el editor de texto --}}
            <input type="hidden" id="x" name="descripcion" value="{{{vacante.descripcion}}}">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>

        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills"> {{!-- Arranca oculto para luego insertarle html --}}
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>

        
    </form>
</main>